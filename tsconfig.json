{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],

      "@utils": ["./src/utils/"],
      "@utils/*": ["./src/utils/*"],

      "@lib": ["./src/lib/"],
      "@lib/*": ["./src/lib/*"],

      "@app": ["./src/app/"],
      "@app/*": ["./src/app/*"],

      "@components": ["./src/components/"],
      "@components/*": ["./src/components/*"],

      "@ui": ["./src/ui/"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
